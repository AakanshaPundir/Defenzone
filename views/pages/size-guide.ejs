<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="main-content">
    <h1 class="page-title">Size Guide</h1>

    <!-- Regular Fit -->
    <section class="size-section">
      <h2>Regular Fit</h2>
      <table class="size-chart">
        <thead>
          <tr>
            <th>Size</th>
            <th>Chest (in)</th>
            <th>Length (in)</th>
          </tr>
        </thead>
        <tbody>
          <tr><td>S</td><td>38.5</td><td>26</td></tr>
          <tr><td>M</td><td>40.5</td><td>27</td></tr>
          <tr><td>L</td><td>42.5</td><td>28</td></tr>
          <tr><td>XL</td><td>44.5</td><td>29</td></tr>
          <tr><td>XXL</td><td>46.5</td><td>30</td></tr>
        </tbody>
      </table>
    </section>

    <!-- Polo T-shirt -->
    <section class="size-section">
      <h2>Polo T-Shirt</h2>
      <table class="size-chart">
        <thead>
          <tr>
            <th>Size</th>
            <th>Chest (in)</th>
            <th>Length (in)</th>
          </tr>
        </thead>
        <tbody>
          <tr><td>S</td><td>39</td><td>26</td></tr>
          <tr><td>M</td><td>41</td><td>27</td></tr>
          <tr><td>L</td><td>43</td><td>28</td></tr>
          <tr><td>XL</td><td>45</td><td>29</td></tr>
          <tr><td>XXL</td><td>47</td><td>30</td></tr>
        </tbody>
      </table>
    </section>

    <!-- Hoodies -->
    <section class="size-section">
      <h2>Hoodies</h2>
      <table class="size-chart">
        <thead>
          <tr>
            <th>Size</th>
            <th>Chest (in)</th>
            <th>Length (in)</th>
          </tr>
        </thead>
        <tbody>
          <tr><td>S</td><td>40</td><td>26.5</td></tr>
          <tr><td>M</td><td>42</td><td>27.5</td></tr>
          <tr><td>L</td><td>44</td><td>28.5</td></tr>
          <tr><td>XL</td><td>46</td><td>29.5</td></tr>
          <tr><td>XXL</td><td>48</td><td>30.5</td></tr>
        </tbody>
      </table>
    </section>

    <!-- Cargos -->
    <section class="size-section">
      <h2>Cargos</h2>
      <table class="size-chart">
        <thead>
          <tr>
            <th>Size</th>
            <th>Waist (in)</th>
            <th>Length (in)</th>
          </tr>
        </thead>
        <tbody>
          <tr><td>S</td><td>30</td><td>39</td></tr>
          <tr><td>M</td><td>32</td><td>40</td></tr>
          <tr><td>L</td><td>34</td><td>41</td></tr>
          <tr><td>XL</td><td>36</td><td>42</td></tr>
          <tr><td>XXL</td><td>38</td><td>43</td></tr>
        </tbody>
      </table>
    </section>
  </div>
</body>
</html>
