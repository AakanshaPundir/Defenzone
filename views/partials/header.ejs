<style>  
/* Top bar */
.top-bar {
    background-color: #0c0b12;
    color: white;
    text-align: center;
    padding: 19px 0;
    font-size: 17px;
}

/* Header layout */
.main-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15px 30px;
    border-bottom: 1px solid #e0e0e0;
}

.header-left i {
    font-size: 20px;
    cursor: pointer;
}

/* Logo */
.header-center {
    text-align: center;
}

.logo {
    margin: 0;
    font-size: 32px;
    font-weight: 900;
    letter-spacing: 2px;
}

.tagline {
    margin: 0;
    font-size: 12px;
}

/* Right side icons */
.header-right {
    display: flex;
    align-items: center;
    gap: 15px;
}

.login-link {
    text-decoration: none;
    color: black;
    font-size: 14px;
}

.icon-wrapper {
    position: relative;
    font-size: 20px;
    cursor: pointer;
}

.count {
    position: absolute;
    top: -8px;
    right: -10px;
    background: black;
    color: white;
    font-size: 10px;
    padding: 2px 5px;
    border-radius: 50%;
}

/* Navigation */
.nav-bar {
    text-align: center;
    padding: 10px 0;
    border-bottom: 1px solid #e0e0e0;
}

.nav-bar a {
    margin: 0 15px;
    text-decoration: none;
    color: black;
    font-size: 14px;
}

.nav-bar a:hover {
    color: #444;
}

/* Mobile Responsive */
@media (max-width: 768px) {
    .main-header {
        flex-direction: column;
        gap: 10px;
    }

    .nav-bar {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
    }
}
body {
    padding-top: 0;
}
.search-form {
    display: flex;
    align-items: center;
    gap: 6px;
}

.search-input {
    padding: 6px 10px;
    border-radius: 20px;
    border: 1px solid #ccc;
    font-size: 0.9rem;
    outline: none;
}

.search-btn {
    background: none;
    border: none;
    cursor: pointer;
    color: #000;
}
</style>

 <!-- Top contact bar -->
<div class="top-bar">
    For bulk order contact <strong>+91 9034117094</strong>
</div>

<!-- Main header -->
<header class="main-header">
    
    <!-- Left: Search icon -->
    <div class="header-left">
        <i class="fa fa-search"></i>
    </div>

    <!-- Center: Logo -->
    <div class="header-center">
        <h1 class="logo">DefenZone</h1>
        <p class="tagline">Command your style, DEFENZONE your identity</p>
    </div>

    <!-- Right: Login & Cart -->
    <div class="header-right">
        <a href="/login" class="login-link">Login / Register</a>

        <div class="icon-wrapper">
            <i class="fa-solid fa-heart"></i>
            <span class="count">0</span>
        </div>

        <a href="/cart" class="icon-wrapper cart-icon">
            <i class="fa-solid fa-cart-shopping"></i>
            <span class="count" id="cart-count">
                <%= (session && session.cart) 
                    ? session.cart.reduce((sum,i)=>sum+i.qty,0) 
                    : 0 %>
            </span>
        </a>
    </div>
  </header>

<!-- Navigation -->
